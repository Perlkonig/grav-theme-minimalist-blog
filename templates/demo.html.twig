{% embed 'partials/base.html.twig' %}
    {% set base_url = page.parent.url %}
  {% set feed_url = base_url %}

  {% if base_url == '/' %}
      {% set base_url = '' %}
  {% endif %}

  {% if base_url == base_url_relative %}
      {% set feed_url = base_url~'/'~page.parent.slug %}
  {% endif  %}
   
    {% block content %}

             {% embed 'partials/blog_item.html.twig' with {'truncate':false,'big_header':true} %}

        {% block toplinks %}
          <div class="viewsource">
            <a href="?view-source=">View Original Source</a> | <a href="?view-source=interpolated">View Interpolated Source</a>
          </div>
        {% endblock %}
       {% endembed %}
    {% endblock %}

{% endembed %}
